<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gwazasoftwares.DscDemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gwazasoftwares.DscDemo.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gwazasoftwares.DscDemo.HomeFragmentHolder"
            android:label="Home"
            android:icon="@drawable/ic_book_black_24dp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.gwazasoftwares.DscDemo.AuthenticationFragmentHolder"
            android:label="Login" />
    </application>

</manifest>